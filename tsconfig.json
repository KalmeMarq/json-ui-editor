{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "noPropertyAccessFromIndexSignature": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "rootDir": "./src",
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}