/*
  The editor is still in early development!
  Includes the JSON UI Schema. Take a look at https://github.com/KalmeMarq/Bugrock-JSON-UI-Schemas

  Editor Exclusive Features:
    type[fill]
    color can be also be "#FFFFFF", "rgb(255, 255, 255)" and "hsl(360, 20%, 10%)"
    custom[fill_renderer]
*/
{
  "namespace": "start",

  "another_fill": {
    "type": "fill",
    "color": [1, 0.5, 0]
  },

  "content_panel": {
    "type": "panel"
  },

  // the target element (as if it was the screen element). Do not delete it!
  "start_content_panel@content_panel": {
    "controls": [
      {
        "f@common.filler": {}
      },
      {
        "filler": {
          "type": "custom",
          "renderer": "gradient_renderer",
          "gradient_direction": "horizontal",
          "color1": [0, 0, 0],
          "color2": [0, 0, 0, 0],
          "size": ["50%", "50%"]
        }
      },
      {
        "fill": {
          "type": "fill",
          "color": [1, 0, 1],
          "size": [70, 30],
          "offset": [0, 8],
          "layer": 20
        }
      },
      {
        "another_fill@another_fill": {
          "color": "rgb(130, 127, 255)",
          "size": [30, 70],
          "offset": [30, 8]
        }
      },
      {
        "hmmm@start.another_fill": {
          "size": [20, 100],
          "color": "red",
          "offset": [0, 58]
        }
      }
    ]
  }
}