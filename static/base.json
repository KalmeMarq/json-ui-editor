/*
  The editor is still in early development!
  Includes the JSON UI Schema. Take a look at https://github.com/KalmeMarq/Bugrock-JSON-UI-Schemas

  Editor Exclusive Features:
    type[fill]
    color can be also be "#FFFFFF", "rgb(255, 255, 255)" and "hsl(360, 20%, 10%)"
    custom[fill_renderer]
*/
{
  "namespace": "start",

  "another_fill": {
    "type": "fill",
    "color": [1, 0.5, 0]
  },

  "content_panel": {
    "type": "panel"
  },

  "dialog": {
    "type": "image",
    "texture": "data:image/png;base64,",
    "nineslice_size": [8, 23, 8, 8],
    "size": [128, 120],
    "offset": [140, 10],
    "layer": 1,
    "controls": [
      {
        "bg": {
          "type": "custom",
          "renderer": "fill_renderer",
          "color": [0, 0, 0, 0.75],
          "size": ["100% - 15px", "100% - 7px - 24px"],
          "offset": [7, "23px"]
        }
      },
      {
        "title": {
          "type": "label",
          "text": "Dialog title",
          "color": [0.25, 0.25, 0.25],
          "offset": [8, 8]
        }
      },
      {
        "message": {
          "type": "label",
          "text": "Hi everyone!",
          "size": ["100% - 16px", "100%"],
          "offset": [12, 27]
        }
      }
    ]
  },

  // the target element (as if it was the screen element). Do not delete it!
  "start_content_panel@content_panel": {
    "controls": [
      {
        "s": {
          "type": "image",
          "texture": "data:image/png;base64,",
          "size": [128, 64],
          "tiled": true,
          "tiled_scale": [2, 2],
          "offset": [150, 170]
        }
      },
      {
        "dialog1@dialog": {}
      },
      {
        "f@common.filler": {}
      },
      {
        "filler": {
          "type": "custom",
          "renderer": "gradient_renderer",
          "gradient_direction": "horizontal",
          "color1": [0, 0, 0],
          "color2": [0, 0, 0, 0],
          "size": ["50%", "50%"]
        }
      },
      {
        "fill": {
          "type": "fill",
          "color": [1, 0, 1],
          "size": [70, 30],
          "offset": [0, 8],
          "layer": 20
        }
      },
      {
        "another_fill@another_fill": {
          "color": "rgb(130, 127, 255)",
          "size": [30, 70],
          "offset": [30, 8]
        }
      },
      {
        "hmmm@start.another_fill": {
          "size": [20, 100],
          "color": "red",
          "offset": [0, 58]
        }
      }
    ]
  }
}